<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
   <com.example.openglmaptest.MyGLSurfaceView
       android:id="@+id/myGLSurfaceView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"></com.example.openglmaptest.MyGLSurfaceView>
    <TextView
        android:id="@+id/tv_showText"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:onClick="showTexture"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@color/teal_200"
        android:text="Click on the image to show the texture"
        />
</RelativeLayout>